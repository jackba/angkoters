<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Asal :" />



    <Spinner
        android:id="@+id/viewcariangkot1"
        android:entries="@array/isi_spinner"
        android:prompt="@string/lokasi_prompt"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Tujuan :" />



    <Spinner
        android:id="@+id/viewcariangkot2"
        android:entries="@array/isi_spinner"
        android:prompt="@string/lokasi_prompt"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/viewcariangkot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!" />

</LinearLayout>